extends base
block navbar
  if context && context.username
    - function capitalize(s) {return s.charAt(0).toUpperCase() + s.slice(1);};
    body(id='app1')
      div
        div(style='width: 60%; margin: 0 auto;')
            nav(class="navbar navbar-default")
              div(class="container-fluid")
                span(class="navbar-brand navbar-left") CODECAST
                div(class="collapse navbar-collapse")
                  ul(class="nav navbar-nav navbar-right")
                    li(class="dropdown")
                      a(class="dropdown-toggle" data-toggle="dropdown") #{capitalize(context.username)} 
                        span(class="caret")     
                      ul(class="dropdown-menu")
                        li
                          a(href="/dashboard") Dashboard
                        li
                          a(href="/recorder") Recorder
                        if context.isAdmin
                          li
                            a(href="/admin/users") User Management
                          li
                            a(href="/admin/records") Record Management
                        li
                          a(href="/logout") Logout
                 